{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Reload CMake project",
            "type": "shell",
            "command": "cmake -S . -B .\\build\\",
            "problemMatcher": []
        },
        {
            "label": "Build project",
            "type": "shell",
            "command": "cmake --build .\\build\\",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
